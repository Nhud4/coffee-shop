{
    "extends": "next/core-web-vitals",
    "rules": {
        "eol-last": [
            "error",
            "always"
        ],
        "eqeqeq": [
            "error",
            "always"
        ],
        "import/order": [
            "error",
            {
                "groups": [
                    "builtin",
                    "external",
                    "internal",
                    "parent",
                    "sibling",
                    "index"
                ],
                "pathGroups": [
                    {
                        "pattern": "@/**",
                        "group": "internal"
                    }
                ]
            }
        ],
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1,
                "VariableDeclarator": "first"
            }
        ],
        "jsx-quotes": [
            "error",
            "prefer-double"
        ],
        "no-console": "warn",
        "no-debugger": "error",
        "no-trailing-spaces": [
            "error",
            {
                "skipBlankLines": false
            }
        ],
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "no-var": "error",
        "object-curly-spacing": [
            "warn",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/self-closing-comp": [
            "error"
        ],
        "react/jsx-wrap-multilines": [
            "error",
            {
                "declaration": "parens-new-line",
                "assignment": "parens-new-line",
                "return": "parens-new-line",
                "condition": "parens-new-line",
                "logical": "parens-new-line",
                "prop": "parens-new-line"
            }
        ]
    }
}